generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Autor {
  id        Int       @id @default(autoincrement())
  nome      String
  cidade    String
  idade     Int
  profissao String
  noticias  Noticia[]
}

model Noticia {
  id            Int      @id @default(autoincrement())
  titulo        String
  autor         String
  deck          String
  linhaSuporte  String
  corpo         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  firstPublishAt DateTime @default(now())
  createdBy     Autor?   @relation(fields: [createdById], references: [id])
  createdById   Int?
}
